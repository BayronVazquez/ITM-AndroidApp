<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RedesSociales">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/ToolbarRedesSociales"
            style="@style/toolbar"
            app:title="@string/RedesSociales"
            app:titleMarginStart="50sp"
            app:titleTextColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                style="@style/parrafo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/DescripcionContacto" />

            <Button
                android:id="@+id/btnWhatsApp"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_margin="15dp"
                android:background="#37B61C"
                android:onClick="openWhatsApp"
                android:text="@string/EnviarWhats"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnFacebook"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_margin="15dp"
                android:background="#1040D3"
                android:onClick="openFacebook"
                android:text="Facebook"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF">

        <include layout="@layout/layout_menu" />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>